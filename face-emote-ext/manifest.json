{
  "manifest_version": 3,
  "name": "MoodGuard â€” quick emotion actions",
  "version": "0.1",
  "description": "Simple webcam popup.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MoodGuard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.json", "face-api.min.js", "models/*", "popup.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}